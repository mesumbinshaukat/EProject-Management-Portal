@model IEnumerable<FAQ>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "FAQ's";
}

<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="content-page">
    <div class="content">
        <h1>FAQ'S</h1>
        <h3>FAQ LIST</h3>
        <hr />
        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6 text-start">
                                    <h4 class="mt-0 header-title">Default Example</h4>
                                    <p class="text-muted font-14 mb-3">
                                        You can find specific question, answer, or id by <code>searcing</code>.
                                    </p>

                                </div>

                                <div class="col-6 text-end">
                                    <a class="btn btn-outline-success" asp-controller="FAQ" asp-action="AddFAQ">Add FAQ</a>
                                </div>
                            </div>

                            <table id="datatable" class="table table-bordered dt-responsive table-responsive nowrap">
                                <thead>
                                    <tr>
                                        
                                        <th>Question</th>
                                        <th>Answer</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (var i in Model)
                                    {

                                    <tr>

                                        <td style="text-overflow:clip !important; overflow:hidden !important;">@i.Question</td>



                                        <td style="text-overflow:clip !important; overflow:hidden !important;">@i.Answer</td>

                                        <td>
                                            <div class="row">

                                                <div class="col-6 m-1">
                                                    <a asp-controller="FAQ" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-warning">Edit</a>

                                                </div>
                                                <div class="col-6 m-1">
                                                        <a asp-controller="FAQ" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger">Delete</a>

                                                </div>

                                            </div>

                                        </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div> <!-- end row -->


        </div>
    </div>
</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->