@{
    Layout = "_Layout";
    ViewData["title"] = "Courses";
}

<style>
    .nav-link {
        color: black !important;
    }
</style>



<!-- contact start -->
<section class="section" id="contact">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="title text-center mb-2">
                    <h6 class="text-primary small-title">Available Courses</h6>
                    <h4>Our Prime <span class="text-warning">Courses</span></h4>
                    <p class="text-muted">These are the currently available courses.</p>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row text-center">
            <h3>Exams</h3>

            <div class="col-12">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Topics Covered</th>
                            <th>Course Fee</th>
                            <th>Course Details</th>                            
                        </tr>
                    </thead>
                    <tbody>

                        @if (ViewBag.Courses != null)
                        {
                            @foreach (var i in ViewBag.Courses)
                            {
                                <tr>
                                    <td>@i.CourseName</td>
                                    <td>@i.TopicsCovered</td>
                                    <td>@i.CourseFee</td>
                                    <td>@i.CourseDetails</td>                                   
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!-- end container-fluid -->
</section>
<!-- contact end -->
