@model IEnumerable<About>
@{
    ViewData["Title"] = "About Us - Symphony LTD";
    Layout = "_Layout";
}

<style>
    .nav-link {
        color: black !important;
    }
    
</style>

<section class="section" id="contact">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="title text-center mb-5">
                    <h6 class="text-primary small-title">About <span class="text-warning">Us</span></h6>
                    <h4>Do Want To Know More About Us?</h4>
                    <p class="text-muted"><cite>Learn more About Us, And What We Do.</cite></p>
                </div>
            </div>
        </div>

        @foreach (var i in Model)
        {
            <div class="row mt-3 text-center">
                <h3>@i.HeadingOne</h3>
                <hr />
                <div class="col-12">
                    <div class="row align-items-center">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <p>@i.ParagraphOne</p>
                        </div>
                        <div class="col-md-4 mb-4 mb-md-0">
                            <div class="center-image">
                                <img src="~/media/about/@i.ImageOne" width="50%">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p>@i.ParagraphTwo</p>
                        </div>
                    </div>
                </div>
            </div>

             <div class="row mt-3 text-center">
                <h3>@i.HeadingTwo</h3>
                <hr />
                <div class="col-12">
                    <div class="row align-items-center">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <p>@i.ParagraphThree</p>
                        </div>
                        <div class="col-md-4 mb-4 mb-md-0">
                            <div class="center-image">
                                <img src="~/media/about/@i.ImageTwo" width="50%">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p>@i.ParagraphFour</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- end container-fluid -->


    <div class="container-fluid">
        <!-- Demo start -->
        <section class="section" id="demo">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="title text-center">
                            <h6 class="text-primary small-title">Faculty</h6>
                            <h4>Expert Faculties</h4>
                            <p class="text-muted">These are one of the most experienced and professional faculties.</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var i in ViewBag.Faculty)
                    {
                    
                    <div class="col-lg-4 col-sm-6">
                        <div class="demo-box text-center p-3 mt-4">
                           
                                <div class="position-relative demo-content">
                                    <div class="demo-img">
                                        <img src="~/media/faculty/@i.Image" alt="@i.Name" class="img-fluid mx-auto d-block rounded">
                                    </div>

                                </div>
                                <div class="mt-3">
                                    <h4 class="font-18">@i.Name</h4>
                                    <h6 class="text-muted">@i.Role</h6>
                                </div>
                            
                        </div>
                    </div>

                    }
                </div>
                <!-- end row -->
               
            </div>
            <!-- end container-fluid -->
        </section>
        <!-- Demo end -->
    </div>
    <!-- counter start -->
    <section class="section bg-gradient">
        <div class="container-fluid">
            <div class="row" id="counter">
                
                  
                <div class="col-lg-3 col-sm-6">
                    <div class="text-center p-3">

                        <div class="counter-content">
                            <h2 class="counter_value mb-3 text-white" data-target="@ViewBag.FacultyCount">0</h2>
                            <h5 class="counter-name text-white">Faculties</h5>
                        </div>
                    </div>
                </div>
               
                <div class="col-lg-3 col-sm-6">
                    <div class="text-center p-3">

                        <div class="counter-content">
                            <h2 class="counter_value mb-3 text-white" data-target="@ViewBag.TotalCourses">0</h2>
                            <h5 class="counter-name text-white">Courses</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="text-center p-3">

                        <div class="counter-content">
                            <h2 class="counter_value mb-3 text-white" data-target="@ViewBag.TotalStudents">0</h2>
                            <h5 class="counter-name text-white">Students</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="text-center p-3">

                        <div class="counter-content">
                            <h2 class="counter_value mb-3 text-white" data-target="@ViewBag.Branches">0</h2>
                            <h5 class="counter-name text-white">Branches</h5>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- counter end -->
</section>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    // Function to animate counter values
    function animateCounterValues() {
        $('.counter_value').each(function () {
            var $this = $(this);
            var target = $this.data('target');
            $({ count: 0 }).animate(
                { count: target },
                {
                    duration: 500,
                    easing: 'swing',
                    step: function () {
                        $this.text(Math.floor(this.count));
                    },
                    complete: function () {
                        $this.text(target);
                    }
                }
            );
        });
    }

    // Trigger counter animation when the section comes into view
    $(document).ready(function () {
        var $counterSection = $('#counter');
        var isCounterAnimated = false;

        $(window).on('scroll', function () {
            var windowBottom = $(window).scrollTop() + $(window).height();
            var sectionTop = $counterSection.offset().top;

            if (!isCounterAnimated && windowBottom > sectionTop) {
                animateCounterValues();
                isCounterAnimated = true;
            }
        });
    });
</script>
