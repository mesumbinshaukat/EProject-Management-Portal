@model Symphony_LTD.Models.Result

@{
    ViewData["Title"] = "Add Result";
    Layout = "_AdminLayout";
}

<div class="content-page">
    <div class="content">
        <h1>Individual Student Exam Results</h1>

        <h4>Make Result For Student</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddResult">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label class="form-label">Student</label>
                        <select class="form-control" asp-for="StudentId">
                            @foreach (var i in ViewBag.Exam)
                        {
                                <option value="@i.Id">
                                    @i.StudentId
                            </option>

                        }

                        </select>
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        
                        <label class="form-label">Course Name</label>
                        <select asp-for="SubjectId" class="form-control check">
                            @foreach (var i in ViewBag.Exam)
                            {
                                <option value="@i.Id">
                                    @i.CourseId
                                </option>
                            }

                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">                      
                        <label class="form-label">Marks Obtained</label>
                        <input asp-for="MarksObtained" class="form-control" placeholder="Marks Obtained" required />
                        <span asp-validation-for="MarksObtained" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="Comments"></label>
                        <input asp-for="Comments" class="form-control" placeholder="Comments" required/>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Make Result" class="btn btn-outline-dark" />
                    </div>
                </form>

            </div>
        </div>     
    </div>
</div>

                       