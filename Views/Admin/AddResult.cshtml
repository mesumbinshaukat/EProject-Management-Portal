@model Symphony_LTD.Models.Result

@{
    ViewData["Title"] = "Add Result";
    Layout = "_AdminLayout";
}

<div class="content-page">
    <div class="content">
        <h1>AddResult</h1>

        <h4>Result</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddResult">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="StudentId" class="form-label"></label>
                        <select class="form-control" asp-for="StudentId">
                        @foreach (var i in ViewBag.Student)
                        {
                            <option value="@i.StudentId">
                                @i.FirstName @i.MiddleName @i.LastName
                            </option>

                        }

                        </select>
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        
                        <label class="form-label">Course Name</label>
                        <select asp-for="SubjectId" class="form-control">
                            @foreach (var i in ViewBag.Course)
                            {
                                <option value="@i.Id">
                                    @i.CourseName
                                </option>

                            }

                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        
                        <label asp-for="MarksObtained" class="form-label"></label>
                        <input asp-for="MarksObtained" class="form-control" placeholder="Marks Obtained" required />
                        <span asp-validation-for="MarksObtained" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Make Result" class="btn btn-outline-dark" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </div>

</div>


