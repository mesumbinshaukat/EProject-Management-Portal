@model Symphony_LTD.Models.EntranceExam

@{
    ViewData["Title"] = "EntranceExam";
    Layout = "_AdminLayout";
}

<div class="content-page">
    <div class="content">
        <h1>Entrance Exam</h1>

        <h3>Schedule Entrance Exam (<span class="text-danger">For Admission & Class Segregation Purpose</span>)</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EntranceExam">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ExamName" class="control-label"></label>
                        <input asp-for="ExamName" class="form-control" />
                        <span asp-validation-for="ExamName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalMarks" class="control-label"></label>
                        <input asp-for="TotalMarks" class="form-control" />
                        <span asp-validation-for="TotalMarks" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course" class="control-label"></label>
                        <select asp-for="Course" class="form-control">
                            @foreach (var i in ViewBag.Courses)
                            {
                                <option>Course Name: <b>@i.CourseName</b> | </option>
                            }
                        </select>
                        <span asp-validation-for="Course" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


