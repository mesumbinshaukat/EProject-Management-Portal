@model IEnumerable<Student>

@{
    ViewData["Title"] = "Student";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="content-page">
        <div>
            <h4>Student</h4>
            <hr />
            <div class="container-fluid mt-5">
                <h1 class="text-center">Courses</h1>
                <div class="row" style="background-color:white !important; border-radius: 25px !important;">
                    <div class="col-lg-12 text-end p-2">
                        @* <button class="btn btn-outline-success" asp-action="AddCourse">Add Course</button> *@
                        <a asp-controller="Admin" asp-action="AddStudent" class="btn btn-outline-success">Add Student</a>

                    </div>

                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Roll Number</th>
                                        <th>First Name</th>
                                        <th>Middle Name</th>
                                        <th>Last Name</th>
                                        <th>Date Of Birth</th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Phone Number</th>
                                        <th>Picture</th>
                                        <th>Accept</th>
                                        <th>Password</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>@i.StudentId</td>
                                            <td>@i.RollNumber</td>
                                            <td>@i.FirstName</td>
                                            <td>@i.MiddleName</td>
                                            <td>@i.LastName</td>
                                            <td>@i.DateOfBirth</td>
                                            <td>@i.Address</td>
                                            <td>@i.Email</td>
                                            <td>@i.PhoneNumber</td>
                                            <td><img src="~/images/@i.Picture" class="w-75"> </td>
                                            <td>@i.Accept</td>
                                            <td>@i.Password</td>
                                            <td>
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <a class="btn btn-warning" asp-action="ChangeStudent" asp-route-id="@i.StudentId">Edit</a>
                                                    </div>
                                                    <div class="col-lg-6">

                                                        @* Model *@

                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@i.StudentId">
                                                            Delete
                                                        </button>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="exampleModal-@i.StudentId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm</h1>
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <h5>Are you sure, you want to delete this student: @i.FirstName @i.MiddleName @i.LastName</h5>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                        <a class="btn btn-outline-danger" asp-action="DeleteStudent" asp-route-id="@i.StudentId">Delete</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>

            </div>
        </div>
        <div>
            @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
            <a asp-action="Index">Back to List</a>
        </div>

    </div>

</div>


