@model Symphony_LTD.Models.Class

@{
    ViewData["Title"] = "Class";
    Layout = "_AdminLayout";
}

<div class="content-page">
    <div class="content">
        <h1>Class</h1>
        <h3>Make Classes</h3>
        <h5 class="text-danger">Once a class is created then you can't edit nor delete. If you want to delete or edit, then consider contacting the developer.</h5>
        <hr />
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col-6">
                    <form asp-action="Classes">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2 w-100">
                            <label asp-for="_Class" class="control-label"></label>
                            <input asp-for="_Class" class="form-control" required placeholder="Class" />
                            <span asp-validation-for="_Class" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2 w-100">
                            <label asp-for="Limit" class="control-label"></label>
                            <input asp-for="Limit" class="form-control" placeholder="Student Limit" />
                            <span asp-validation-for="Limit" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2 w-100">
                            <label asp-for="Course" class="control-label"></label>
                            <select class="form-control" asp-for="Course">
                                @foreach (var i in ViewBag.Courses)
                                {
                                    <option value="@i.Id">@i.CourseName</option>
                                }
                            </select>
                            <span asp-validation-for="Course" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create Class" class="btn btn-outline-success" />
                        </div>
                    </form>
                </div>

                <div class="col-6">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Class</th>
                                <th>Class Limit</th>
                                <th>Assigned Course</th>
                              </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in ViewBag.Classes)
                            {
                                <tr>
                                    <td>
                                        @i._Class
                                    </td>
                                    <td>
                                        @i.Limit
                                    </td>
                                    <td>
                                        @foreach (var x in ViewBag.Courses)
                                        {
                                            if (x.Id == i.Course)
                                            {
                                                @x.CourseName
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>

    </div>

</div>





