@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses";
}

@{
    Layout = "_AdminLayout"; // Set the layout for this view
}

<!-- Start Page Content here -->
<!-- ============================================================== -->


<div class="content-page" >
    <div class="content">

        <!-- start content-->
       <!-- container -->
  <div class="container-fluid mt-5">
            <h1 class="text-center">Courses</h1>
            <div class="row" style="background-color:white !important; border-radius: 25px !important;">
            <div class="col-lg-12 text-end p-2">
            @* <button class="btn btn-outline-success" asp-action="AddCourse">Add Course</button> *@
            <a asp-controller="Admin" asp-action="AddCourse" class="btn btn-outline-success">Add Course</a>

            </div>

            <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    
                                    <th>Course</th>
                                    <th>Topics</th>
                                    <th>Course Fee</th>
                                    <th>Course Details</th>
                                   
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>

                                        <td>@i.CourseName</td>
                                        <td>@i.TopicsCovered</td>
                                        <td>$@i.CourseFee</td>
                                        <td>@i.CourseDetails</td>
                                       
                                        <td>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <a class="btn btn-warning" asp-action="EditCourse" asp-route-id="@i.Id">Edit</a>
                                                </div>
                                                <div class="col-lg-6">
                                                  
                                                    @* Modal *@

                                                    <!-- Button trigger modal -->
                                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                        Delete
                                                    </button>

                                                    <!-- Modal -->
                                                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm</h1>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <h5>Are you sure, you want to delete this course: @i.CourseName</h5>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <a class="btn btn-primary" asp-action="DeleteCourse" asp-route-id="@i.Id">Delete</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


            </div>
            </div>

        </div>
    </div> <!-- content -->
   

</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
                }