@model IEnumerable<Exam>
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "Individual Student Exam Schedule";
}

<div class="content-page">
    <div class="content">
        <h1><span class="text-danger">Pending</span> Student Exam</h1>
        <h3>These Are The Schedule Of Individual Student Exams</h3>
        <hr />

        <div class="row p-3" style="background-color:white !important; border-radius: 25px !important;">
           
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead>
                            <tr>

                                <th>
                                    Exam Name/Title
                                </th>
                                <th>Exam Date</th>
                                <th>Total Score</th>
                                <th>Student Name</th>
                                <th>Course Name</th>
                                <th>Detail</th>
                                <th>Status</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>

                                    <td>@i.ExamName</td>
                                    <td>@i.ExamDate</td>
                                    <td>@i.Score</td>
                                    <td>$@i.StudentId</td>
                                    <td>@i.CourseId</td>
                                    <td>@i.Detail</td>
                                    <td>
                                        @if (i.Pending == true)
                                        {
                                            <p class="text-danger fw-bold">Not Done</p>
                                        }
                                        else if (i.Pending == false && i.Pending != null)
                                        {
                                            <p class="text-success fw-bold">Done</p>
                                        }
                                    </td>

                                    <td>

                                        <a class="btn btn-warning" asp-action="EditCourse" asp-route-id="@i.Id">Edit</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>

</div>